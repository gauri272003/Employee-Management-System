<%- include('layout/header') %>

<div class="container-fluid">
    <!-- Success Alert -->
    <% if (typeof success !== 'undefined' && success) { %>
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            <i class="bi bi-check-circle-fill me-2"></i>
            <%= success %>
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    <% } %>

    <!-- Search and Filter Card -->
    <div class="card shadow-sm mb-4">
        <div class="card-body">
            <form action="/employees" method="GET" id="filterForm">
                <div class="row g-3 align-items-end">
                    <!-- Search Box -->
                    <div class="col-md-4">
                        <label for="search" class="form-label">
                            <i class="bi bi-search me-1"></i>Search
                        </label>
                        <input type="text" 
                               class="form-control" 
                               id="search" 
                               name="search" 
                               placeholder="Search by name, ID, or email..."
                               value="<%= filters.search || '' %>">
                    </div>

                    <!-- Department Filter -->
                    <div class="col-md-3">
                        <label for="department" class="form-label">
                            <i class="bi bi-building me-1"></i>Department
                        </label>
                        <select class="form-select" id="department" name="department">
                            <option value="">All Departments</option>
                            <option value="IT" <%= filters.department === 'IT' ? 'selected' : '' %>>IT</option>
                            <option value="HR" <%= filters.department === 'HR' ? 'selected' : '' %>>HR</option>
                            <option value="Finance" <%= filters.department === 'Finance' ? 'selected' : '' %>>Finance</option>
                            <option value="Marketing" <%= filters.department === 'Marketing' ? 'selected' : '' %>>Marketing</option>
                            <option value="Sales" <%= filters.department === 'Sales' ? 'selected' : '' %>>Sales</option>
                            <option value="Operations" <%= filters.department === 'Operations' ? 'selected' : '' %>>Operations</option>
                        </select>
                    </div>

                    <!-- Status Filter -->
                    <div class="col-md-3">
                        <label for="status" class="form-label">
                            <i class="bi bi-toggle-on me-1"></i>Status
                        </label>
                        <select class="form-select" id="status" name="status">
                            <option value="">All Status</option>
                            <option value="Active" <%= filters.status === 'Active' ? 'selected' : '' %>>Active</option>
                            <option value="Inactive" <%= filters.status === 'Inactive' ? 'selected' : '' %>>Inactive</option>
                        </select>
                    </div>

                    <!-- Filter Buttons -->
                    <div class="col-md-2">
                        <button type="submit" class="btn btn-warning w-100">
                            <i class="bi bi-filter me-1"></i>Filter
                        </button>
                    </div>
                </div>

                <!-- Clear Filter Button -->
                <% if (filters.search || filters.department || filters.status) { %>
                    <div class="row mt-2">
                        <div class="col-12">
                            <a href="/employees" class="btn btn-sm btn-outline-secondary">
                                <i class="bi bi-x-circle me-1"></i>Clear Filters
                            </a>
                        </div>
                    </div>
                <% } %>
            </form>
        </div>
    </div>

    <!-- Employee Table Card -->
    <div class="card shadow-sm">
        <div class="card-header bg-white d-flex justify-content-between align-items-center">
            <h5 class="card-title mb-0">
                <i class="bi bi-list-ul me-2 text-primary"></i>
                Employee List
                <span class="badge bg-primary ms-2"><%= employees.length %></span>
            </h5>
            <a href="/employees/add" class="btn btn-warning btn-sm">
                <i class="bi bi-person-plus-fill me-1"></i>Add New
            </a>
        </div>
        <div class="card-body p-0">
            <% if (employees.length > 0) { %>
                <div class="table-responsive">
                    <table class="table table-hover table-striped mb-0">
                        <thead class="table-light">
                            <tr>
                                <th>Employee ID</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Phone</th>
                                <th>Department</th>
                                <th>Designation</th>
                                <th>Status</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            <% employees.forEach(employee => { %>
                                <tr>
                                    <td class="fw-bold text-primary"><%= employee.employeeId %></td>
                                    <td><%= employee.name %></td>
                                    <td>
                                        <small>
                                            <i class="bi bi-envelope me-1"></i><%= employee.email %>
                                        </small>
                                    </td>
                                    <td>
                                        <small>
                                            <i class="bi bi-telephone me-1"></i><%= employee.phone %>
                                        </small>
                                    </td>
                                    <td>
                                        <span class="badge bg-info"><%= employee.department %></span>
                                    </td>
                                    <td><%= employee.designation %></td>
                                    <td>
                                        <span class="badge bg-<%= employee.status === 'Active' ? 'success' : 'secondary' %>">
                                            <i class="bi bi-<%= employee.status === 'Active' ? 'check-circle' : 'x-circle' %> me-1"></i>
                                            <%= employee.status %>
                                        </span>
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group btn-group-sm" role="group">
                                            <!-- View Button -->
                                            <a href="/employees/<%= employee._id %>" 
                                               class="btn btn-outline-info"
                                               data-bs-toggle="tooltip"
                                               title="View Profile">
                                                <i class="bi bi-eye-fill"></i>
                                            </a>
                                            
                                            <!-- Edit Button -->
                                            <a href="/employees/<%= employee._id %>/edit" 
                                               class="btn btn-outline-warning"
                                               data-bs-toggle="tooltip"
                                               title="Edit Employee">
                                                <i class="bi bi-pencil-fill"></i>
                                            </a>
                                            
                                            <!-- Delete Button -->
                                            <button type="button" 
                                                    class="btn btn-outline-danger delete-btn"
                                                    data-id="<%= employee._id %>"
                                                    data-name="<%= employee.name %>"
                                                    data-bs-toggle="tooltip"
                                                    title="Delete Employee">
                                                <i class="bi bi-trash-fill"></i>
                                            </button>
                                        </div>
                                    </td>
                                </tr>
                            <% }); %>
                        </tbody>
                    </table>
                </div>
            <% } else { %>
                <!-- Empty State -->
                <div class="text-center py-5">
                    <i class="bi bi-inbox display-1 text-muted"></i>
                    <h4 class="mt-3 text-muted">No Employees Found</h4>
                    <p class="text-muted">
                        <% if (filters.search || filters.department || filters.status) { %>
                            No employees match your search criteria. Try different filters.
                        <% } else { %>
                            Get started by adding your first employee.
                        <% } %>
                    </p>
                    <% if (!filters.search && !filters.department && !filters.status) { %>
                        <a href="/employees/add" class="btn btn-warning mt-2">
                            <i class="bi bi-person-plus-fill me-2"></i>Add First Employee
                        </a>
                    <% } %>
                </div>
            <% } %>
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header bg-danger text-white">
                <h5 class="modal-title">
                    <i class="bi bi-exclamation-triangle-fill me-2"></i>
                    Confirm Deletion
                </h5>
                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <p class="mb-0">Are you sure you want to delete employee <strong id="employeeName"></strong>?</p>
                <div class="alert alert-warning mt-3 mb-0">
                    <i class="bi bi-info-circle me-2"></i>
                    This action will soft delete the employee. The record will be marked as deleted but not permanently removed.
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">
                    <i class="bi bi-x-circle me-1"></i>Cancel
                </button>
                <button type="button" class="btn btn-danger" id="confirmDeleteBtn">
                    <i class="bi bi-trash-fill me-1"></i>Delete
                </button>
            </div>
        </div>
    </div>
</div>

<script>
// Wait for Bootstrap to load
window.addEventListener('load', function() {
    // Initialize tooltips
    const tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'));
    tooltipTriggerList.map(function (tooltipTriggerEl) {
        return new bootstrap.Tooltip(tooltipTriggerEl);
    });

    // Delete functionality
    let deleteEmployeeId = null;
    const deleteModal = new bootstrap.Modal(document.getElementById('deleteModal'));

    document.querySelectorAll('.delete-btn').forEach(btn => {
        btn.addEventListener('click', function() {
            deleteEmployeeId = this.dataset.id;
            document.getElementById('employeeName').textContent = this.dataset.name;
            deleteModal.show();
        });
    });

    document.getElementById('confirmDeleteBtn').addEventListener('click', async function() {
        if (!deleteEmployeeId) return;

        try {
            const response = await fetch(`/employees/${deleteEmployeeId}`, {
                method: 'DELETE',
                headers: {
                    'Content-Type': 'application/json'
                }
            });

            const data = await response.json();

            if (data.success) {
                window.location.href = '/employees?success=Employee deleted successfully';
            } else {
                alert('Error: ' + data.message);
            }
        } catch (error) {
            console.error('Delete error:', error);
            alert('Error deleting employee');
        }
    });
});
</script>

<%- include('layout/footer') %>
